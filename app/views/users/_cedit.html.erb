
<%= simple_form_for user, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <%= f.input :fullname %>
  <%= f.input :username %>
  <%= f.input :email %>
  <% if current_user.role.eql?('admin') %>
      <%= f.input :role, collection: [ "runner", "chef", "customer", "admin"], :include_blank => false %>
  <% end %>
  <%= f.input :phone, as: :numeric %>
  <%= f.input :address %>

  <p align="right"><%= f.button :submit, "Update", class: "btn btn-success" %> | | 
  <% if current_user.role.eql?("admin") %>
    <% if user.role == "customer" %>
      <%= link_to 'Back', '/all_customer', class: "btn btn-warning" %></p>
    <% elsif user.role == "chef" %>
      <%= link_to 'Back', '/all_chef', class: "btn btn-warning" %></p>
    <% elsif user.role == "runner" %>
      <%= link_to 'Back', '/all_runner', class: "btn btn-warning" %></p>
    <% else %>
      <%= link_to 'Back', '/', class: "btn btn-warning" %></p>
    <% end -%>
  <% else %>
    <%= link_to 'Back', '/', class: "btn btn-warning" %></p>
  <% end %>
<% end %>

