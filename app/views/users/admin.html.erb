<p id="notice"><%= notice %></p>

<h2>Customers</h2><br>

<table class="table">
  <thead>
    <tr class="info">
      <th>Fullname</th>
      <th>Username</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.role == "customer" %>
      <tr>
        <td><%= user.fullname %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.role %></td>
        <td><%= user.address %></td>
        <td><%= link_to '', user, class: 'glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to '', edit_user_path(user, yy: 'edit'), class: 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

