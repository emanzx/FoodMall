<p id="notice"><%= notice %></p>

<h2>Our Product</h2>
<br>
<table class="table">
  <thead>
    <tr class="info">
      <th><%= sort_link @search, :name, "Name" %></th>
      <th><%= sort_link @search, :price, "Price" %></th>
      <th>Note</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td>RM : <%= item.price %></td>
        <td><%= item.note %></td>
        <td><%= link_to 'Order', new_orderitem_path(item_id: item.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
   
<% if @stat == "true" %>
    <%= render "items/SelectedProduct" %>
<% end %>
