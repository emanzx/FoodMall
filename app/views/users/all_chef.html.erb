<h2>CHEF</h2><br>

<table class="table">
  <thead>
    <tr class="info">
      <th><%= sort_link @search, :username, "Username" %></th>
      <th>Email</th>
      <th>Phone</th>
      <th><%= sort_link @search, :created_at, "Register Time" %></th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chefs.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
        <td><%= user.address %></td>
        <td><%= link_to '', user, class: 'glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to '', edit_user_path(user, yy: 'edit'), class: 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @chefs %>