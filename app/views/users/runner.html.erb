<p id="notice"><%= notice %></p>

<h2>Order to Delivery</h2><br>

<%= form_for :orderitem, :url => '/update_stask', :html => { :method => :put } do |f| %>
<table class="table">
  <thead>
    <tr class="info">
      <th> </th>
      <th>Customer Name</th>
      <th>Quantity</th>
      <th>Delivery Time</th>
      <th>Items</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @orderitems.each do |order| %>
      <% if order.status.eql?('ready') %> 
      <tr>
      	<td><%= check_box_tag "orderitem_ids[]", order.id %></td>
        <td><%= link_to order.user.username, user_path(order.user, dd: 'detail') %></td>
        <td><%= order.quantity %></td>
        <td><%= order.dtime %></td>
        <td><%= order.item.name %></td>
        <td><%= order.status %></td>
        <td><%= order.runner_id %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<p align="right"><%= f.submit "Add to Task", class: 'btn btn-primary' %> | <%= link_to 'My Task', '/my_task', class: 'btn btn-info' %></p>
<% end %>
