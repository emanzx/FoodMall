
<h1 class="title text-center"> Schedule Orders </h1><br>

<td><%= link_to 'Add Template', new_template_path, class: "btn btn-primary" %></td><br><br>

<div class="calendar" data-toggle="calendar">
	<div class="row">
		<div  class="col-xs-12 calendar-head" ><strong>Customers</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Sunday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Monday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Tuesday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Wednesday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Thursday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Friday</strong></div>
		<div class="col-xs-12 calendar-head" ><strong>Saturday</strong></div>
	</div>
	<% @cust.each do |cust| %>
	<div class="row">
		<div class="col-xs-12 calendar-day">
			<div class="events">
				<div class="event">
					<h3><%= cust.user.username %></h3>
				</div>
			</div>
		</div>
		<div class="col-xs-12 calendar-day">
		<% @templates.each do |template| %>
			<% if template.user_id == cust.user_id && template.day == "sunday" %>
				<div class="events">
					<div class="event">
						<h4><i class="fa fa-cutlery" aria-hidden="true"></i>&nbsp;<%= link_to template.item.name, template_path(template) %><br>
							<i class="fa fa-cubes" aria-hidden="true"></i>&nbsp;<%= template.quantity %>
						</h4>
					</div>
				</div>
			<% end %>
		<% end %>
		</div>
		<div class="col-xs-12 calendar-day">
		<% @templates.each do |template| %>
			<% if template.user_id == cust.user_id && template.day == "monday" %>
