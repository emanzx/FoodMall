							<i class="fa fa-cubes" aria-hidden="true"></i>&nbsp;<%= template.quantity %>
						</h4>
					</div>
				</div>
			<% end %>
		<% end %>	
		</div>
	</div>
	<% end %>
	<%= will_paginate @cust %>
</div>
