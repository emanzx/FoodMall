						<h4><i class="fa fa-cutlery" aria-hidden="true"></i>&nbsp;<%= link_to template.item.name, template_path(template) %><br>
							<i class="fa fa-cubes" aria-hidden="true"></i>&nbsp;<%= template.quantity %>
						</h4>
					</div>
				</div>
			<% end %>
		<% end %>
		</div>
		<div class="col-xs-12 calendar-day">
		<% @templates.each do |template| %>
			<% if template.user_id == cust.user_id && template.day == "friday" %>
