<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">About</label>
        <div class="login-form">
            <div class="sign-in-htm">
              <%= form_tag '/login', :class=> 'form-horizontal' do %>
                <div class="group">
                    <label for="user" class="label">Username</label>
                    <%= text_field_tag :email, nil, class: 'input' %>
                </div>
                <div class="group">
                    <label for="pass" class="label">Password</label>
                    <%= password_field_tag :password, nil, class: 'input' %>
                </div>
                <div class="group">
                    <input id="check" type="checkbox" class="check" checked>
                    <label for="check"><span class="icon"></span> Keep me Signed in</label>
                </div>
                <div class="group">
                    <%= submit_tag "Submit", class: 'button' %>
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <a href="#">Forgot Password?</a>
                </div>
              <% end %>
            </div>
            <div class="sign-up-htm">
              <font color="white">... FoodMall ...</font>
            </div>
        </div>
    </div>
</div>